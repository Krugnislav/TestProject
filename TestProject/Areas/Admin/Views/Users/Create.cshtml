<div class="modal-header">
    <h3 class="modal-title">Create</h3>
</div>
<div class="modal-body">
    <div class="center">

        <form name="form">
            <div class="form-group">
                <label>Email</label>
                <input type="email"
                       class="form-control"
                       name="email"
                       ng-model="form.Email"
                       ng-maxlength="150"
                       ng-model-options="{ updateOn: 'default blur' }"
                       ng-required="true" />
                <span class="error" ng-show="form.email.$error.required">
                    Required!
                </span>
                <span class="error" ng-show="form.email.$error.email">
                    Wrong email!
                </span>
                <span class="error" ng-show="form.email.$error.maxlength">
                    Too long!
                </span>
            </div>

            <div class="form-group">
                <label>Password</label>
                <input type="password"
                       class="form-control"
                       name="password"
                       ng-model="form.Password"
                       ng-minlength="6"
                       ng-maxlength="50"
                       ng-required="true" />
                <span class="error" ng-show="form.password.$error.required">
                    Required!
                </span>
                <span class="error" ng-show="form.password.$error.minlength">
                    Too short!
                </span>
                <span class="error" ng-show="form.password.$error.maxlength">
                    Too long!
                </span>
            </div>

            <div class="form-group">
                <label>Confirm password</label>
                <input type="password"
                       class="form-control"
                       name="confirmpassword"
                       ng-model="form.ConfPassword"
                       ng-minlength="6"
                       ng-required="true"
                       ng-pattern={{form.Password}} />
                <span class="error" ng-show="form.confirmpassword.$error.required">
                    Required!
                </span>
                <span class="error" ng-show="form.confirmpassword.$error.pattern">
                    Passwords aren't equals!
                </span>

            </div>

            <div class="form-group">
                <label>Name</label>
                <input type="text"
                       class="form-control"
                       name="name"
                       ng-model="form.Name"
                       ng-minlength="3"
                       ng-maxlength="150"
                       ng-required="true" />
                <span class="error" ng-show="form.name.$error.required">
                    Required!
                </span>
                <span class="error" ng-show="form.name.$error.minlength">
                    Too short!
                </span>
                <span class="error" ng-show="form.name.$error.maxlength">
                    Too long!
                </span>
            </div>
            <div class="form-group">
                <label>Last Name</label>
                <input type="text"
                       class="form-control"
                       name="lastName"
                       ng-minlength="3"
                       ng-maxlength="150"
                       ng-model="form.LastName"
                       ng-required="true" />
                <span class="error" ng-show="form.lastName.$error.required">
                    Required!
                </span>
                <span class="error" ng-show="form.lastName.$error.minlength">
                    Too short!
                </span>
                <span class="error" ng-show="form.lastName.$error.maxlength">
                    Too long!
                </span>
            </div>


            <div class="form-group">
                <label>Date of birth</label>
                <p class="input-group">
                    <input type="text"
                           class="form-control"
                           name="dateofbirth"
                           datepicker-popup="dd.MM.yyyy"
                           ng-model="form.DateOfBirth"
                           max-date="maxdate"
                           is-open="opened"
                           datepicker-options="dateOptions"
                           ng-required="true"
                           close-text="Close" />
                    <span class="input-group-btn">
                        <button type="button" class="btn btn-default" ng-click="open($event)"><i class="glyphicon glyphicon-calendar"></i></button>
                    </span>
                </p>
                <span class="error" ng-show="form.dateofbirth.$error.required">
                    Required!
                </span>
                <span class="error" ng-show="form.dateofbirth.$error.pattern">
                    Wrong date format!
                </span>

            </div>
        </form>
    </div>

</div>
<div class="modal-footer">
    <button class="btn btn-primary" ng-click="create()" ng-disabled="form.$invalid">Save</button>
    <button class="btn btn-warning" ng-click="cancel()">Cancel</button>
</div>




