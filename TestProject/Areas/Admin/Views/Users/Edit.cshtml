<div class="modal-header">
    <h3 class="modal-title">Edit</h3>
</div>
<div class="modal-body">
    <div class="center">
        <form name="form">
            <div ng-if="validationErrors" class="animate-if">
                <alert type="danger">{{validationErrors}}</alert>
            </div>
            <div class="form-group">
                <label>Email</label>
                <input type="email"
                       class="form-control"
                       name="email"
                       ng-model="userEdit.Email"
                       ng-maxlength="150"
                       ng-model-options="{ updateOn: 'default blur' }"
                       ng-required="true" />
                <span class="error" ng-show="form.email.$error.required">
                    Required!
                </span>
                <span class="error" ng-show="form.email.$error.email">
                    Wrong email!
                </span>
                <span class="error" ng-show="form.email.$error.maxlength">
                    Too long!
                </span>
            </div>

            <div class="form-group">
                <label>Name</label>
                <input type="text"
                       class="form-control"
                       name="name"
                       ng-model="userEdit.Name"
                       ng-minlength="3"
                       ng-maxlength="150"
                       ng-required="true" />
                <span class="error" ng-show="form.name.$error.required">
                    Required!
                </span>
                <span class="error" ng-show="form.name.$error.minlength">
                    Too short!
                </span>
                <span class="error" ng-show="form.name.$error.maxlength">
                    Too long!
                </span>
            </div>
            <div class="form-group">
                <label>Last Name</label>
                <input type="text"
                       class="form-control"
                       name="lastName"
                       ng-minlength="3"
                       ng-maxlength="150"
                       ng-model="userEdit.LastName"
                       ng-required="true" />
                <span class="error" ng-show="form.lastName.$error.required">
                    Required!
                </span>
                <span class="error" ng-show="form.lastName.$error.minlength">
                    Too short!
                </span>
                <span class="error" ng-show="form.lastName.$error.maxlength">
                    Too long!
                </span>
            </div>

            <div class="form-group">
                <label>Date of birth</label>
                <p class="input-group">
                    <input type="text"
                           class="form-control"
                           name="dateofbirth"
                           datepicker-popup="dd.MM.yyyy"
                           ng-model="userEdit.DateOfBirth"
                           max-date="maxdate"
                           is-open="opened"
                           datepicker-options="dateOptions"
                           ng-required="true"
                           close-text="Close" />
                    <span class="input-group-btn">
                        <button type="button" class="btn btn-default" ng-click="open($event)"><i class="glyphicon glyphicon-calendar"></i></button>
                    </span>
                </p>
                <span class="error" ng-show="form.dateofbirth.$error.required">
                    Required!
                </span>
                <span class="error" ng-show="form.dateofbirth.$error.pattern">
                    Wrong date format!
                </span>
            </div>

            <div class="form-group">
                <label>Status</label>
                <select class="form-control" ng-model="userEdit.Status" ng-options="s for s in statuses"><option></option></select>
            </div>

            <div class="form-group">
                <label>Roles</label>
                <div ng-repeat="role in roles track by $index">
                    <p class="input-group">
                        <input type="checkbox" ng-model="role.isUser" ng-change="change(role)">
                        {{role.Name}}

                    </p>
                </div>
            </div>


        </form>
    </div>
</div>
<div class="modal-footer">
    <button class="btn btn-primary" ng-click="ok()" ng-disabled="form.$invalid">Save</button>
    <button class="btn btn-warning" ng-click="cancel()" >Cancel</button>
</div>
