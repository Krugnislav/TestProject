<div class="modal" tabindex="-1" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div ng-controller="ModalEditCtrl">
                <div class="modal-header">
                    <button type="button" class="close" ng-click="$hide()">&times;</button>
                    <h4 class="modal-title">Edit</h4>
                </div>
                <div class="modal-body">
                    <div class="center">
                        <form name="form">
                            <div ng-if="validationErrors" class="animate-if">
                                <alert type="danger">{{validationErrors}}</alert>
                            </div>
                            <div class="form-group">
                                <label>Email</label>
                                <input type="email"
                                       class="form-control"
                                       name="email"
                                       ng-model="userEdit.Email"
                                       ng-maxlength="150"
                                       ng-model-options="{ updateOn: 'default blur' }"
                                       ng-required="true" />
                                <span class="error" ng-show="form.email.$error.required">
                                    Required!
                                </span>
                                <span class="error" ng-show="form.email.$error.email">
                                    Wrong email!
                                </span>
                                <span class="error" ng-show="form.email.$error.maxlength">
                                    Too long!
                                </span>
                            </div>

                            <div class="form-group">
                                <label>Name</label>
                                <input type="text"
                                       class="form-control"
                                       name="name"
                                       ng-model="userEdit.Name"
                                       ng-minlength="3"
                                       ng-maxlength="150"
                                       ng-required="true" />
                                <span class="error" ng-show="form.name.$error.required">
                                    Required!
                                </span>
                                <span class="error" ng-show="form.name.$error.minlength">
                                    Too short!
                                </span>
                                <span class="error" ng-show="form.name.$error.maxlength">
                                    Too long!
                                </span>
                            </div>
                            <div class="form-group">
                                <label>Last Name</label>
                                <input type="text"
                                       class="form-control"
                                       name="lastName"
                                       ng-minlength="3"
                                       ng-maxlength="150"
                                       ng-model="userEdit.LastName"
                                       ng-required="true" />
                                <span class="error" ng-show="form.lastName.$error.required">
                                    Required!
                                </span>
                                <span class="error" ng-show="form.lastName.$error.minlength">
                                    Too short!
                                </span>
                                <span class="error" ng-show="form.lastName.$error.maxlength">
                                    Too long!
                                </span>
                            </div>

                            <div class="form-group">
                                <label>Date of birth</label>
                                <input type="text"
                                       class="form-control"
                                       name="dateofbirth"
                                       datepicker-popup="dd.MM.yyyy"
                                       ng-model="userEdit.DateOfBirth"
                                       data-max-date="maxdate"
                                       ng-required="true"
                                       bs-datepicker />
                                <span class="error" ng-show="form.dateofbirth.$error.required">
                                    Required!
                                </span>
                                <span class="error" ng-show="form.dateofbirth.$error.pattern">
                                    Wrong date format!
                                </span>

                            </div>

                            <div class="form-group">
                                <label>Status</label>
                                <select class="form-control" ng-model="userEdit.Status" ng-options="s for s in statuses"><option></option></select>
                            </div>

                            <div class="form-group">
                                <label>Roles</label>
                                <div ng-repeat="role in roles track by $index">
                                    <p class="input-group">
                                        <input type="checkbox" ng-model="role.isUser" ng-change="change(role)">
                                        {{role.Name}}

                                    </p>
                                </div>
                            </div>


                        </form>
                    </div>

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" ng-click="$hide()">Close</button>
                    <button type="button" class="btn btn-primary" ng-click="ok()" ng-disabled="form.$invalid">Save</button>
                </div>
            </div>
        </div>
    </div>
</div>

