@model TestProject.Models.ViewModels.LoginView
@{
    ViewBag.Title = "Вход";
    
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="container">
        <div class="center">
            <div class="ramka">
                <h2>Вход</h2>
                @using (Html.BeginForm("Index", "LoginAdmin", FormMethod.Post, new { @class = "form-horizontal" }))
                {
                    <fieldset>
                        <div class="control-group">
                            <label class="control-label" for="Email">
                                Email
                            </label>
                            <div class="controls">
                                <span class="error">
                                    @Html.TextBox("Email", Model.Email, new { @class = "form-control" })<br>
                                    @Html.ValidationMessage("Email")
                                </span>
                            </div>

                        </div>
                        <div class="control-group">
                            <label class="control-label" for="Password">
                                Пароль
                            </label>
                            <div class="controls">
                                <span class="error">
                                    @Html.Password("Password", Model.Password, new { @class = "form-control" })<br>
                                    @Html.ValidationMessage("Password")
                                </span>
                            </div>
                        </div>
                        <div class="form-actions"> <br>
                            <button type="submit" class="btn btn-primary">
                                Войти
                            </button>
                        </div>
                    </fieldset>
                }
            </div>
        </div>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/angularjs")
    @Scripts.Render("~/bundles/bootstrapjs")
    @Scripts.Render("~/bundles/app")
</body>
</html>





