@model TestProject.Models.ViewModels.LoginView
@{
    ViewBag.Title = "Change password";
    Layout = "~/Areas/Default/Views/Shared/_Layout.cshtml";
}
<nav class="navbar navbar-default">
    <ul class="nav navbar-nav">
        <li><a href="/home/">Home</a></li>
        <li><a href="/home/about">About us</a></li>
    </ul>
</nav>
<div class="heading">
    <h1>Change password</h1>
</div>

<div class="center">
    <div class="form-group">
@using (Html.BeginForm("ChangePassword", "User", FormMethod.Post, new { @class = "form" }))
{
    <fieldset>
        <div class="form-group">
            <label>Enter an email, for you will be sended a link.</label>
            <div class="controls">
                @Html.TextBox("Email", Model.Email, new { @class = "form-control" })
                @Html.ValidationMessage("Email")
            </div>

        </div>
        <br>
        <div class="form-actions">
            <button type="submit" class="btn btn-primary">
                Send
            </button>
        </div>
    </fieldset>
}
    </div>
</div>