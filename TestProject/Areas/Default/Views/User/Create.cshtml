
@{
    ViewBag.Title = "Registration";
    Layout = "~/Areas/Default/Views/Shared/_Layout.cshtml";
}
<nav class="navbar navbar-default">
    <ul class="nav navbar-nav">
        <li><a href="/home/">Home</a></li>
        <li><a href="/home/about">About us</a></li>
    </ul>
</nav>
<div class="heading">
    <h1>Registration</h1>
</div>

<div class="center">

            <div ng-controller="index">
                <form name="form">
                    <div class="form-group">
                        <label>Email</label>
                        <input type="email"
                               class="form-control"
                               name="email"
                               ng-model="user.Email"
                               ng-maxlength="150"
                               ng-model-options="{ updateOn: 'default blur' }"
                               ng-required="true" />
                        <span class="error" ng-show="form.email.$error.required">
                            Required!
                        </span>
                        <span class="error" ng-show="form.email.$error.email">
                            Wrong email!
                        </span>
                        <span class="error" ng-show="form.email.$error.maxlength">
                            Too long!
                        </span>
                    </div>

                    <div class="form-group">
                        <label>Password</label>
                        <input type="password"
                               class="form-control"
                               name="password"
                               ng-model="user.Password"
                               ng-minlength="6"
                               ng-maxlength="50"
                               ng-required="true" />
                        <span class="error" ng-show="form.password.$error.required">
                            Required!
                        </span>
                        <span class="error" ng-show="form.password.$error.minlength">
                            Too short!
                        </span>
                        <span class="error" ng-show="form.password.$error.maxlength">
                            Too long!
                        </span>
                    </div>

                    <div class="form-group">
                        <label>Confirm password</label>
                        <input type="password"
                               class="form-control"
                               name="confirmpassword"
                               ng-model="user.ConfPassword"
                               ng-minlength="6"
                               ng-required="true"
                               ng-pattern={{form.Password}} />
                        <span class="error" ng-show="form.confirmpassword.$error.required">
                            Required!
                        </span>
                        <span class="error" ng-show="form.confirmpassword.$error.pattern">
                            Passwords aren't equals!
                        </span>

                    </div>

                    <div class="form-group">
                        <label>Name</label>
                        <input type="text"
                               class="form-control"
                               name="name"
                               ng-model="user.Name"
                               ng-minlength="3"
                               ng-maxlength="150"
                               ng-required="true" />
                        <span class="error" ng-show="form.name.$error.required">
                            Required!
                        </span>
                        <span class="error" ng-show="form.name.$error.minlength">
                            Too short!
                        </span>
                        <span class="error" ng-show="form.name.$error.maxlength">
                            Too long!
                        </span>
                    </div>
                    <div class="form-group">
                        <label>Last Name</label>
                        <input type="text"
                               class="form-control"
                               name="lastName"
                               ng-minlength="3"
                               ng-maxlength="150"
                               ng-model="user.LastName"
                               ng-required="true" />
                        <span class="error" ng-show="form.lastName.$error.required">
                            Required!
                        </span>
                        <span class="error" ng-show="form.lastName.$error.minlength">
                            Too short!
                        </span>
                        <span class="error" ng-show="form.lastName.$error.maxlength">
                            Too long!
                        </span>
                    </div>


                    <div class="form-group">
                        <label>Date of birth</label>
                        <input type="text"
                               class="form-control"
                               name="dateofbirth"
                               datepicker-popup="dd.MM.yyyy"
                               ng-model="user.DateOfBirth"
                               data-max-date="maxdate"
                               ng-required="true"
                               bs-datepicker />
                        <span class="error" ng-show="form.dateofbirth.$error.required">
                            Required!
                        </span>
                        <span class="error" ng-show="form.dateofbirth.$error.pattern">
                            Wrong date format!
                        </span>
                    </div>
                    <div class="form-group">
                        @Html.ActionLink("Back to List", "Index")

                        <button type="btn btn-default pull-right" ng-click="create()" class=" btn btn-default" ng-disabled="form.$invalid">Create</button>
                    </div>
                </form>

            </div>
 
</div>




