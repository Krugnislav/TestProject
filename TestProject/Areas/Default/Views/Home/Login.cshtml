@model TestProject.Models.ViewModels.LoginView
<div class="popover" tabindex="-1" ng-show="content">
    <div class="arrow"></div>
    <h3 class="popover-title" ng-bind-html="title" ng-show="title"></h3>
    <div class="popover-content">
        @using (Html.BeginForm("Index", "Login", FormMethod.Post, new { @class = "form" }))
        {
            <fieldset>
                <div class="form-group">
                    <label class="control-label" for="Email">
                        Email
                    </label>
                    <div class="controls">
                        @Html.TextBox("Email", Model.Email, new { @class = "form-control" })
                        @Html.ValidationMessage("Email")
                    </div>

                </div>
                <div class="form-group">
                    <label class="control-label" for="Password">
                        Пароль
                    </label>
                    <div class="controls">
                        @Html.Password("Password", Model.Password, new { @class = "form-control" })
                        @Html.ValidationMessage("Password")
                    </div>
                </div>
                <br><br>
                <div class="form-actions">
                    <button type="submit" class="btn btn-primary">
                        Войти
                    </button>
                    <a ng-href="~/User/ChangePassword">Forgot your password?</a>
                </div>
            </fieldset>
        }

    </div>
</div>


