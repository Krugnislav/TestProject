@model TestProject.Models.ViewModels.LoginView
@{
    ViewBag.Title = "Вход";
    Layout = "~/Areas/Default/Views/Shared/_Layout.cshtml";
}
<nav class="navbar navbar-default">
    <ul class="nav navbar-nav">
        <li><a href="/home/">Home</a></li>
        <li><a href="/home/about">About us</a></li>
    </ul>
</nav>
<div class="heading">
    <h1>Login</h1>
</div>

@using (Html.BeginForm("Index", "Login", FormMethod.Post, new { @class = "form" }))
{
    <fieldset>
        <div class="form-group">
            <label class="control-label" for="Email">
                Email
            </label>
            <div class="controls">
                @Html.TextBox("Email", Model.Email, new { @class = "form-control" })
                @Html.ValidationMessage("Email")
            </div>

        </div>
        <div class="form-group">
            <label class="control-label" for="Password">
                Пароль
            </label>
            <div class="controls">
                @Html.Password("Password", Model.Password, new { @class = "form-control" })
                @Html.ValidationMessage("Password")
            </div>
        </div>
        <br>
        <div class="form-actions">
            <button type="submit" class="btn btn-primary">
                Войти
            </button>
        </div>
    </fieldset>
}

